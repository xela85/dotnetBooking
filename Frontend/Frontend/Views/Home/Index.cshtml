@{
    Layout = "~/Views/Shared/layout.cshtml";
}
<div ng-controller="HomeController">
    <div class="row">
        <div class="col s4">
            <form>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">flight takeoff</i>
                        <input id="icon_prefix" type="text" class="validate" ng-model="airportCity">
                        <label for="icon_prefix">Airport city</label>
                        <a class=" waves-effect waves-light btn" ng-class="{'disabled': airportCity == ''}" ng-click="loadAirportsByCity(airportCity)">Search airports in {{airportCity}}</a>
                    </div>
                    <div class="col s6">
                        <div class="card-panel grey lighten-5 z-depth-1">
                            <span class="black-text">
                                <span ng-if="!airportDeparture">No airport selected yet.</span>
                                <span ng-if="airportDeparture">You have selected {{airportDeparture.model.name}}</span>
                            </span>
                        </div>
                    </div>
                    <!--<div class="input-field col s12">
                        <i class="material-icons prefix">home</i>
                        <input id="icon_telephone" type="tel" class="validate">
                        <label for="icon_telephone">Hotel</label>
                    </div>-->
                </div>
            </form>
        </div>
        <div class="col s8">
            <ui-gmap-google-map center='map.center' zoom='map.zoom'>
                <ui-gmap-polyline ng-repeat="links in airportsLinks" path="links.path" stroke="links.stroke"
                                  fit="false" icons='links.icons'></ui-gmap-polyline>
                <ui-gmap-markers models="airports"
                                 coords="'coords'" fit="true" doCluster=true click="onClickAirport" options="'options'" icon="'icon'" modelsbyref="false">
                </ui-gmap-markers>
            </ui-gmap-google-map>
        </div>
    </div>

</div>
